@model Ecommerce.Models.UserViewModel
<div class="row">
    <div class="col-sm-6 col-md-6">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th colspan="3">Personal Information</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>First Name:</td>
                    <td>@Html.DisplayFor(x => x.FirstName, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>Last Name:</td>
                    <td>@Html.DisplayFor(x => x.LastName, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>Gender:</td>
                    <td>@Html.DisplayFor(x => x.Gender, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>DOB:</td>
                    <td>@(Model.BirthDate == null ? "" : Model.BirthDate.Value.ToString("MM/dd/yyyy"))</td>
                </tr>
            </tbody>
        </table>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th colspan="3">Contact Information</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Email:</td>
                    <td>@Html.DisplayFor(x => x.Email, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>Phone:</td>
                    <td>@Html.DisplayFor(x => x.Phone, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>Phone:</td>
                    <td>@Html.DisplayFor(x => x.Mobile, new { @class = "form-control" })</td>
                </tr>
            </tbody>
        </table>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th colspan="3">Address</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Address:</td>
                    <td>@Html.DisplayFor(x => x.Address, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>Pincode:</td>
                    <td>@Html.DisplayFor(x => x.Pincode, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>City:</td>
                    <td>@Html.DisplayFor(x => x.City, new { @class = "form-control" })</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-sm-6 col-md-6">
        <div class="center">
            <img id="imgProfileImage_overview" style="height:100px;width:100px;" src="@Url.Action("GetUserImage", "AdminUser", new { area="Admin", tkn = Model.TokenKey })" class="img-circle" />
            <hr>
        </div>
    </div>
</div>

