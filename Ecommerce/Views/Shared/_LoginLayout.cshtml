<!doctype html>
<html class="fixed">
<head>
    @{
        var setting = Commom.GlobalMethods.GlobalMethods.NewInstance().GetSetting();
    }
    <title>@setting.CompanyName | @ViewBag.MainTitle</title>
    <meta name="keywords" content="@setting.PageTitle" />
    <meta name="description" content="@setting.PageDescription">
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">
    <!-- Vendor CSS -->

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Admin/theme.css" rel="stylesheet" />
    <link href="~/Content/Admin/default.css" rel="stylesheet" />
    <link href="~/Content/Admin/theme-custom.css" rel="stylesheet" />
</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo pull-left" style="width:100%; text-align:center; margin-bottom:30px;">
                <img src="@Url.Action("GetLogo", "AdminAccount", new { area="Admin" })" height="150" alt="Knight Club" />
            </a>
            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> Sign In</h2>
                </div>
                @RenderBody()
            </div>
            <p class="text-center text-muted mt-md mb-md">&copy;@setting.CompanyName. </p>
        </div>
    </section>
</body>
</html>