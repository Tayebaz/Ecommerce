@model Ecommerce.Models.ProductViewModel
@{
    ViewBag.MainTitle = "Product";
}
<div class="container-fluid container-fullw bg-white">
    <div class="row">
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">@(Model.ProductName)</h2>
                </header>
                <div class="panel-body">
                    <div class="tabs">
                        <ul class="nav nav-tabs" data-tabs="tabs" id="myTab">
                            <li class="active"><a id="lnkOverview" href="#overview" data-toggle="tab">Overview</a></li>
                            <li><a id="lnkSize" href="#size" data-toggle="tab">Size</a></li>
                            <li><a id="lnkAttribute" href="#attribute" data-toggle="tab">Attribute</a></li>
                            <li><a id="lnkImage" href="#image" data-toggle="tab">Images</a></li>
                            <li><a id="lnkEdit" href="#editProduct" data-toggle="tab">Edit Product</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane active" id="overview">
                                <script type="text/javascript">
                                    $('#lnkOverview').click(function () {
                                        location.hash = this.getAttribute("href");
                                        $.get('/Admin/Product/Overview/@Model.TokenKey').done(function (result) {
                                            $('#overview').html(result);
                                        });
                                    });
                                </script>
                            </div>
                            <div class="tab-pane active" id="size">
                                <script type="text/javascript">
                                    $('#lnkSize').click(function () {

                                        location.hash = this.getAttribute("href");
                                        $.get('/Admin/Product/Size/@Model.TokenKey').done(function (result) {
                                            $('#size').html(result);
                                        });
                                    });
                                </script>
                            </div>
                            <div class="tab-pane active" id="attribute">
                                <script type="text/javascript">
                                    $('#lnkAttribute').click(function () {

                                        location.hash = this.getAttribute("href");
                                        $.get('/Admin/Product/Attribute/@Model.TokenKey').done(function (result) {
                                            $('#attribute').html(result);
                                        });
                                    });
                                </script>
                            </div>
                            <div class="tab-pane active" id="image">
                                <script type="text/javascript">
                                    $('#lnkImage').click(function () {

                                        location.hash = this.getAttribute("href");
                                        $.get('/Admin/Product/DisplayImage/@Model.TokenKey').done(function (result) {
                                            $('#image').html(result);
                                        });
                                    });
                                </script>
                            </div>
                            <div class="tab-pane" id="editProduct">
                                <script type="text/javascript">
                                    $('#lnkEdit').click(function () {
                                        location.hash = this.getAttribute("href");
                                        $.get('/Admin/Product/Edit/@Model.TokenKey').done(function (result) {
                                            $('#editProduct').html(result);
                                        });
                                    });
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $.get('/Admin/Product/Overview/@Model.TokenKey').done(function (result) {
            $('#overview').html(result);
        });

        if (location.hash) {
            $('a[href=' + location.hash + ']').tab('show');
            $('a[href=' + location.hash + ']').click();
        }
    });
</script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
