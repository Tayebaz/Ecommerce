@model Ecommerce.Models.CategoryViewModel

@{
    ViewBag.MainTitle = "Category";
}
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Create", "AdminCategory", FormMethod.Post, new { area ="Admin", id = "frmCreate", @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">Create Category</h2>
                </header>
                <div class="panel-body">                   
                    <fieldset>                       
                        <div class="form-group">
                            @Html.LabelFor(m => m.CategoryName, "Category Name", new { @class = "col-md-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
                            </div>
                        </div>                                        
                    </fieldset>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-9 col-md-offset-3">
                            <input type="submit" class="btn btn-primary pull-right" value="Create" />
                        </div>
                    </div>
                </div>
            </section>
        }
    </div>
</div>

<script src="~/Scripts/CustomJavascripts/Common.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

