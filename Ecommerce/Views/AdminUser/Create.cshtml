                        @*<div class="form-group">
                            @Html.LabelFor(m => m.City, new { @class = "col-md-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                    </fieldset>
                    <hr class="dotted tall">
                    <h4 class="mb-xlg">Profile Image</h4>
                    <fieldset>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ProfileImageUpload, new { @class = "col-md-3 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.ProfileImageUpload, new { @Type = "file", @accept = "image/gif, image/jpeg,image/png" })
                                @Html.ValidationMessageFor(m => m.ProfileImageUpload, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">&nbsp;</div>
                            <div class="col-md-6">
                                <img id="imgProfileImage" style="height:100px;width:100px;" src="@Url.Action("GetUserImage", "User", new { tkn = Model.TokenKey })" />
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-9 col-md-offset-3">
                            <input type="submit" class="btn btn-primary pull-right" value="Create" />
                        </div>
                    </div>
                </div>
            </section>
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function (e) {
        $("#ProfileImageUpload").change(function () {
            readURL(this, $('#imgProfileImage'));
        });
        $('#BirthDate').datepicker({
            dateFormat: 'mm/dd/yy'
        });
    });
</script>
